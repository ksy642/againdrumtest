<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrumtestActivity">


    <AbsoluteLayout
        android:id="@+id/activity_Drum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        tools:context="com.example.user.music.DrumActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="1dp"
            android:layout_y="-1dp"
            app:srcCompat="@drawable/drumtest" />


        <Button
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/d3"
            android:layout_toLeftOf="@+id/d3"
            android:layout_x="193dp"
            android:layout_y="218dp"
            android:background="" />


        <Button
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_below="@+id/d3"
            android:layout_alignEnd="@+id/d1"
            android:layout_alignRight="@+id/d1"
            android:layout_marginTop="19dp"
            android:layout_x="97dp"
            android:layout_y="288dp"
            android:background="" />

        <Button
            android:id="@+id/d3"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_x="132dp"
            android:layout_y="88dp"
            android:background="" />

        <Button
            android:id="@+id/d4"
            android:layout_width="165dp"
            android:layout_height="151dp"
            android:layout_alignBottom="@+id/d1"
            android:layout_toStartOf="@+id/d5"
            android:layout_toLeftOf="@+id/d5"
            android:layout_x="541dp"
            android:layout_y="67dp"
            android:background="" />

        <Button
            android:id="@+id/d5"
            android:layout_width="98dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_x="262dp"
            android:layout_y="122dp"
            android:background="" />

        <Button
            android:id="@+id/d6"
            android:layout_width="111dp"
            android:layout_height="74dp"
            android:layout_below="@+id/d3"
            android:layout_alignEnd="@+id/d1"
            android:layout_alignRight="@+id/d1"
            android:layout_marginTop="19dp"
            android:layout_x="411dp"
            android:layout_y="129dp"
            android:background="" />

        <Button
            android:id="@+id/d7"
            android:layout_width="142dp"
            android:layout_height="125dp"
            android:layout_below="@+id/d3"
            android:layout_alignEnd="@+id/d1"
            android:layout_alignRight="@+id/d1"
            android:layout_marginTop="19dp"
            android:layout_x="556dp"
            android:layout_y="258dp"
            android:background="" />

        <Button
            android:id="@+id/d8"
            android:layout_width="wrap_content"
            android:layout_height="201dp"
            android:layout_below="@+id/d3"
            android:layout_alignEnd="@+id/d1"
            android:layout_alignRight="@+id/d1"
            android:layout_marginTop="19dp"
            android:layout_x="350dp"
            android:layout_y="222dp"
            android:background="" />

        <ImageButton
            android:id="@+id/Settings"
            android:layout_width="141dp"
            android:layout_height="33dp"
            android:layout_marginTop="5dp"
            android:layout_x="19dp"
            android:layout_y="2dp"
            android:background=""
            android:onClick="Clickdrumback" />

    </AbsoluteLayout>


</androidx.constraintlayout.widget.ConstraintLayout>