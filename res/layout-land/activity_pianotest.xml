<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".pianotestActivity">

    <HorizontalScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <!--White KeyBoard-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <ImageButton
        android:id="@+id/snare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/highhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/crash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/ride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/smalltom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/largetom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/floortom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />

    <ImageButton
        android:id="@+id/basedrum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickkedKeyboard"
        android:padding="0dp"
        app:srcComat="@drawable/whitebutton" />


         </LinearLayout>
        </FrameLayout>
    </HorizontalScrollView>
</LinearLayout>